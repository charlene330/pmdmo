<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp" >
    <TextView
        android:id="@+id/lblMensaje"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/seleccione_un_album_de_la_lista"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <RelativeLayout
        android:id="@+id/rlDatos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" >
        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:contentDescription="@string/arte_del_album" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/imgFoto"
            android:gravity="center" >
            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textIsSelectable="true" />
            <TextView
                android:id="@+id/lblAnio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblNombre"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="true" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
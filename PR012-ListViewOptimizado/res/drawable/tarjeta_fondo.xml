<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/white" />
            <stroke
                android:width="@dimen/tarjeta_strokeWidth"
                android:color="@color/tarjeta_strokeColor" />
            <corners
                android:radius="@dimen/tarjeta_cornersRadius" />
            <padding
                android:bottom="@dimen/tarjeta_padding"
                android:left="@dimen/tarjeta_padding"
                android:right="@dimen/tarjeta_padding"
                android:top="@dimen/tarjeta_padding" />
        </shape>
    </item>
</layer-list>
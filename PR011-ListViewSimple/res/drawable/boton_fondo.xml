<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Cuando se está pulsando -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@color/boton_startColor" android:endColor="@color/boton_centerColor" android:startColor="@color/boton_centerColor" />

            <size android:height="@dimen/boton_size" android:width="@dimen/boton_size" />

            <corners android:radius="@dimen/boton_cornersRadius" />
        </shape>
    </item>
    
    <!-- Cuando está deshabilitado -->
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />

            <size android:height="@dimen/boton_size" android:width="@dimen/boton_size" />

            <corners android:radius="@dimen/boton_cornersRadius" />
        </shape>
        
    </item>
    
    <!-- En estado normal -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@color/boton_centerColor" android:endColor="@color/boton_endColor" android:startColor="@color/boton_startColor" />

            <size android:height="@dimen/boton_size" android:width="@dimen/boton_size" />

            <corners android:radius="@dimen/boton_cornersRadius" />
        </shape>
    </item>

</selector>
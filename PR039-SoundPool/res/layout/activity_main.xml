<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnDisparar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/disparar"
        android:layout_margin="30dp"
        android:onClick="btnDispararOnClick" />

    <Button
        android:id="@+id/btnExplosion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDisparar"
        android:layout_centerHorizontal="true"
        android:text="@string/explosion" 
        android:onClick="btnExplosionOnClick" />

</RelativeLayout>
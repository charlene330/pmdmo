<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Capa de fondo transparente. Sirve para tener un padding interno global -->
    <item>
        <shape>
            <padding
                android:bottom="@dimen/card_padding_bottom"
                android:left="@dimen/card_padding"
                android:right="@dimen/card_padding"
                android:top="@dimen/card_padding" />

            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <!-- Primera sombra -->
    <item>
        <shape>
            <padding
                android:bottom="@dimen/card_shadow_padding_bottom"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <solid android:color="@color/card_shadow_1" />

            <corners android:radius="@dimen/card_radius" />
        </shape>
    </item>
    <!-- Segunda sombra -->
    <item>
        <shape>
            <padding
                android:bottom="@dimen/card_shadow_padding_bottom"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <solid android:color="@color/card_shadow_2" />

            <corners android:radius="@dimen/card_radius" />
        </shape>
    </item>
    <!-- Color de la tarjeta -->
    <item>
        <shape>
            <solid android:color="@color/card_background" />

            <corners android:radius="@dimen/card_radius" />
        </shape>
    </item>

</layer-list>
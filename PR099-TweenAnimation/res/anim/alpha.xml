<?xml version="1.0" encoding="utf-8"?>
<!--
     La vista pasa de opacidad máximo (fromAlpha) a transparente (toAlpha)
     en 1000ms (duration) usando interpolación por aceleración y 
     desaceleración (interpolator).
     Al finalizar la animación, NO se conserva el nuevo estado de 
     transparencia, por lo que vuelve a ser opaco (fillAfter)
-->
<alpha xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1000"
    android:fillAfter="false"
    android:fromAlpha="1.0"
    android:interpolator="@android:anim/accelerate_decelerate_interpolator"
    android:toAlpha="0.0" />

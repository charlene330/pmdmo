<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/expanded_padding" >

    <ImageView
        android:id="@+id/imgBandera"
        android:layout_width="@dimen/expanded_width"
        android:layout_height="@dimen/expanded_height"
        android:contentDescription="@string/bandera"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/spain" />

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lbl_background"
        android:padding="@dimen/lblPais_padding"
        android:gravity="center"
        android:layout_below="@+id/imgBandera"
        android:layout_alignLeft="@+id/imgBandera"
        android:layout_alignRight="@+id/imgBandera"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    >
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingBottom="@dimen/actividad_margen_vertical"
    android:paddingLeft="@dimen/actividad_margen_horizontal"
    android:paddingRight="@dimen/actividad_margen_horizontal"
    android:paddingTop="@dimen/actividad_margen_vertical"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rlPanel"
        android:layout_alignRight="@+id/rlBotonera"
        android:gravity="center"
        android:layout_marginBottom="@dimen/titulo_margen_vertical"
        android:layout_marginTop="@dimen/titulo_margen_vertical"
        android:text="Nombre de la Tienda"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rlPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre" >

        <TextView
            android:id="@+id/lblDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vistas_margen_vertical"
            android:text="14 Calle 34-23 Zona 18"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lblTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDireccion"
            android:layout_marginTop="@dimen/vistas_margen_vertical"
            android:text="956765368"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lblHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblTelefono"
            android:layout_marginTop="@dimen/vistas_margen_vertical"
            android:text="Horarios:\nLunes a viernes: 9:00am-8:00pm\nSÃ¡bados: 9:00am-10:00pm"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lblWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblHorarios"
            android:layout_marginTop="@dimen/vistas_margen_vertical"
            android:text="http://www.ccpuertaeuropa.com/"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblWebsite"
            android:layout_marginBottom="@dimen/vistas_margen_vertical"
            android:layout_marginTop="@dimen/vistas_margen_vertical"
            android:text="info@ccpuertaeuropa.com"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBotonera" 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/rlPanel"
        android:layout_below="@+id/lblNombre"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/rlPanel" >

        <ImageButton
            android:id="@+id/btnLlamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/llamar"
            android:src="@drawable/ic_llamar" />

    </RelativeLayout>

</RelativeLayout>
</ScrollView>
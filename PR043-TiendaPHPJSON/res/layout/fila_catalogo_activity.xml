<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/foto"
        android:src="@drawable/ic_iconopp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/imgFoto"
        android:padding="5dp" >

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Fujifilm ZZ729"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lblNombre"
            android:layout_marginTop="5dp"
            android:text="Es una cámara muy buena que me gusta a mi mucho, sobre todo por las mañanas y por las tardes en el atardecer"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
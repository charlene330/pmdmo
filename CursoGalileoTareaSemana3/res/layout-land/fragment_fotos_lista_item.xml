<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_foto"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="@dimen/ancho_foto"
            android:layout_height="@dimen/alto_foto"
            android:adjustViewBounds="true"
            android:contentDescription="@string/foto"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_leyenda_foto"
            android:gravity="center"
            android:paddingBottom="@dimen/simple"
            android:paddingTop="@dimen/simple"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
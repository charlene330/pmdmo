<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="btnOnClick"
        android:text="@string/datepicker"
        tools:context=".MainActivity" />
    <Button
        android:id="@+id/btnTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="btnOnClick"
        android:text="@string/timepicker" />
    <Button
        android:id="@+id/btnAlertaSiNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="btnOnClick"
        android:text="@string/alerta_de_pregunta_si_no" />
    <Button
        android:id="@+id/btnAlertaSeleccionDirecta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="btnOnClick"
        android:text="@string/alerta_de_seleccion_directa" />
    <Button
        android:id="@+id/btnAlertaSeleccionSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="btnOnClick"
        android:text="@string/alerta_de_seleccion_simple" />
    <Button
        android:id="@+id/btnAlertaSeleccionMultiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="btnOnClick"
        android:text="@string/alerta_de_seleccion_multiple" />
    <Button
        android:id="@+id/btnAlertaAdaptador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="btnOnClick"
        android:text="@string/alerta_con_adaptador" />
</LinearLayout>
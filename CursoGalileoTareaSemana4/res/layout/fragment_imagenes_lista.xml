<?xml version="1.0" encoding="utf-8"?><uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout     xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/ptr_layout"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:padding="@dimen/simple" >    <es.iessaladillo.pedrojoya.galileo.widgets.EndlessGridView        android:id="@+id/lstFotos"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:columnWidth="@dimen/ancho_foto_instagram"        android:gravity="center"        android:horizontalSpacing="@dimen/simple"        android:numColumns="auto_fit"        android:stretchMode="columnWidth"        android:verticalSpacing="@dimen/doble" />    <RelativeLayout        android:id="@+id/rlListaFotosVacia"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center_vertical" >        <ImageView            android:id="@+id/imgListaFotosVacia"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_centerHorizontal="true"            android:layout_marginBottom="@dimen/doble"            android:clickable="true"            android:contentDescription="@string/no_hay_ninguna_foto_en_la_lista"            android:src="@drawable/ic_lista_tiendas_vacia" />        <TextView            android:id="@+id/lblListaFotosVacia"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/imgListaFotosVacia"            android:layout_centerHorizontal="true"            android:clickable="true"            android:text="@string/no_hay_ninguna_foto_en_la_lista"            android:textAppearance="?android:attr/textAppearanceMedium" />    </RelativeLayout></uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout>
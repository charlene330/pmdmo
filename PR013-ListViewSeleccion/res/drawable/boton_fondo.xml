<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    	<!-- Cuando el botón está deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/boton_disabled" />
            <size android:height="68dp" android:width="136dp" />
        </shape>
    </item>

    <!-- En el resto de estados -->
    <item>
        <!-- Lista de capas -->
        <layer-list>
            <!-- Capa de fondo -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/pregunta_fondo" />
                    <size android:height="68dp" android:width="136dp" />
                </shape>
            </item>
            <!-- Capa de anillo claro -->
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <size android:height="64dp" android:width="128dp" />
                    <solid android:color="@color/activity_fondo" />
                </shape>
            </item>
            <!-- Capa de primer plano -->
            <item android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <size android:height="60dp" android:width="1200dp" />
                    <gradient android:angle="0" android:endColor="@color/respuesta_fondo" android:startColor="@color/pregunta_fondo" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<!-- Capa externa -->
    <item>
        <shape android:shape="oval" >
            <solid android:color="@color/pregunta_fondo" />

            <size
                android:height="@dimen/contador_width"
                android:width="@dimen/contador_width" />
        </shape>
    </item>
    <!-- Capa central -->
    <item
        android:bottom="@dimen/boton_central_layer_offset"
        android:left="@dimen/boton_central_layer_offset"
        android:right="@dimen/boton_central_layer_offset"
        android:top="@dimen/boton_central_layer_offset">
        <shape android:shape="oval" >
            <size
                android:height="@dimen/contador_central_layer_height"
                android:width="@dimen/contador_central_layer_height" />

            <solid android:color="@color/activity_fondo" />
        </shape>
    </item>
    <!-- Capa interna -->
    <item
        android:bottom="@dimen/boton_inner_layer_offset"
        android:left="@dimen/boton_inner_layer_offset"
        android:right="@dimen/boton_inner_layer_offset"
        android:top="@dimen/boton_inner_layer_offset">
        <shape android:shape="oval" >
            <size
                android:height="@dimen/contador_inner_layer_height"
                android:width="@dimen/contador_inner_layer_height" />

            <gradient
                android:angle="0"
                android:endColor="@color/respuesta_fondo"
                android:startColor="@color/pregunta_fondo" />
        </shape>
    </item>

</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <solid android:color="@color/pregunta_fondo" />

            <size
                android:height="68dp"
                android:width="68dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval" >
            <size
                android:height="64dp"
                android:width="64dp" />

            <solid android:color="@color/activity_fondo" />
        </shape>
    </item>
    <item
        android:id="@+id/contador_animacion"
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="oval" >
            <size
                android:height="60dp"
                android:width="60dp" />

            <gradient
                android:angle="0"
                android:endColor="@color/respuesta_fondo"
                android:startColor="@color/pregunta_fondo" />
        </shape>
    </item>

</layer-list>